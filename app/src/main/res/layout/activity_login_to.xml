<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow2"
    tools:context=".LoginTo">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9800"
                android:text="Welcome back"
                android:textSize="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:ems="9"
                android:text="login to your account ."
                app:layout_constraintTop_toBottomOf="@+id/heading2"
                app:layout_constraintLeft_toLeftOf="@id/heading2"
                app:layout_constraintRight_toRightOf="@id/heading2"/>

            <EditText
                android:id="@+id/user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:padding="4dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/info2"
                app:layout_constraintRight_toRightOf="@id/info2"
                app:layout_constraintLeft_toLeftOf="@id/info2"
                />
            <EditText
                android:id="@+id/pass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:padding="4dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/user1"
                app:layout_constraintRight_toRightOf="@id/info2"
                app:layout_constraintLeft_toLeftOf="@id/info2"
                />
            <CheckBox
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:textColor="#435C24"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/pass1"
                app:layout_constraintLeft_toLeftOf="@id/pass1"/>
            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/pass1"
                android:text="Forgot Password ?"
                android:textColor="#435C24"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toRightOf="@+id/check1"
                app:layout_constraintRight_toRightOf="@+id/pass1"/>
            <Button
                android:id="@+id/loginInf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="23dp"
                android:ems="10"
                android:textColor="#FF9800"
                android:layout_marginTop="25dp"
                android:backgroundTint="#000000"
                app:layout_constraintTop_toBottomOf="@id/check1"
                app:layout_constraintLeft_toLeftOf="@id/pass1"
                app:layout_constraintRight_toRightOf="@id/pass1"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/No_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/loginInf"
                android:text="Dont't have an account ?"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@id/loginInf"/>
            <TextView
                android:id="@+id/Sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/loginInf"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#EA8E07"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="@id/loginInf"
                app:layout_constraintLeft_toRightOf="@id/No_account"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
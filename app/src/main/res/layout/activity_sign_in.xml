<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow2"
    tools:context=".SignIn">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewsign"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="20dp"
            android:padding="20dp"
            >
            <TextView
                android:id="@+id/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF9800"
                android:text="Register"
                android:textSize="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:ems="9"
                android:text="Create your account"
                app:layout_constraintTop_toBottomOf="@+id/heading3"
                app:layout_constraintLeft_toLeftOf="@id/heading3"
                app:layout_constraintRight_toRightOf="@id/heading3"/>
            <EditText
                android:id="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:padding="4dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/info3"
                app:layout_constraintRight_toRightOf="@id/info3"
                app:layout_constraintLeft_toLeftOf="@id/info3"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:inputType="textWebEmailAddress"
                android:padding="4dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/user2"
                app:layout_constraintRight_toRightOf="@id/info3"
                app:layout_constraintLeft_toLeftOf="@id/info3"
                />
            <EditText
                android:id="@+id/pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:inputType="textPassword"
                android:padding="4dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintRight_toRightOf="@id/info3"
                app:layout_constraintLeft_toLeftOf="@id/info3"
                />
            <EditText
                android:id="@+id/re_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textSize="25dp"
                android:textColorHint="#414E4D"
                android:ems="12"
                android:padding="4dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="@drawable/textbox"
                app:layout_constraintTop_toBottomOf="@id/pass2"
                app:layout_constraintRight_toRightOf="@id/info3"
                app:layout_constraintLeft_toLeftOf="@id/info3"
                />
            <TextView
                android:id="@+id/policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
             android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/re_pass"
                android:text="By registering You are agreeing to our terms of use and privacy Policy"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="@id/info3"
                app:layout_constraintLeft_toLeftOf="@id/info3"/>
            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textSize="23dp"
                android:ems="10"
                android:textColor="#FF9800"
                android:backgroundTint="#000000"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/policy"
                app:layout_constraintRight_toRightOf="@id/re_pass"
                app:layout_constraintLeft_toLeftOf="@id/re_pass"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/has_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/register"
                android:text="Already have an account ?"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@id/register"/>
            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/register"
                android:text="Log In"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="@id/register"
                app:layout_constraintLeft_toRightOf="@id/has_account"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>